<div class="page-header">
  <h1>
    <%= link_to "文章列表管理", admin_articles_path %>
  </h1>
</div>
<%= render partial: 'search' %>
<div class="panel">
  <div class="panel-heading">
    <div class="panel-title">文章列表</div>
  </div>

  <div class="panel-body">
    <table class="table">
      <thead>
        <th>序号</th>
        <th>标题</th>
        <th>类别</th>
        <th>发布人</th>
        <th>状态</th>
        <th>更新日期</th>
        <th>操作</th>
      </thead>

      <tbody>
        <% @articles.each do |article| %>
        <tr>
          <td title='<%= article.name %>'>
            <%= link_to admin_article_path(article) do %>
              <%=  article.name %>
            <% end -%>
          </td>
          <td><%= article.code %></td>
          <td></td>
          <td><%= article.purchase_type_name %></td>
          <td><%= article.purchaser_name %></td>
          <td><%= article.purchaser_tel %></td>
          <td><%= link_to '编辑', edit_admin_article_path(article,type: 'article_index') %></td>
        </tr>
        <% end -%>
      </tbody>
    </table>
  </div>
</div>
<div class="pull-right">
  <%= paginate  @articles %>
</div>
