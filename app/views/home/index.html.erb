<div id="demo01" class="flexslider clearfix">
  <ul class="slides">
    <li><div class="img"><img src="/plugins/images/icon_13.png"alt="" /></div></li>
    <li><div class="img"><img src="/plugins/images/icon_13.png"alt="" /></div></li>
    <li><div class="img"><img src="/plugins/images/icon_13.png"alt="" /></div></li>
